<div class="container">
<div class="row">
<div class="col-md-6 col-md-offset-3">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :class => 'form-horizontal') do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group form-group">
    <%= f.label :username, :class => 'control-label' %><br />
    <%= f.text_field :username, :class => 'text_field form-control' %>
  </div>
  <div><%= f.label :email, :class => 'control-label'%><br />
  <%= f.email_field :email, autofocus: true , :class => 'text_field form-control'%></div>

  <div><%= f.label :password, :class => 'control-label' %><br />
    <%= f.password_field :password, autocomplete: "off" , :class => 'password_field form-control'%>
  </div>

  <div><%= f.label :password_confirmation, :class => 'control-label' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'password_field form-control' %></div>

  <p><%= f.label :about, :class => 'control-label'  %><br />
  <%= f.text_area :about , :class => 'text_area form-control'%></p>
<%= f.submit "Sign up", :class => 'btn btn-primary center-block'  %>
<% end %>
<div class="control-group form-group sign-in pull-right">
  <%= link_to "Sign in", new_session_path(resource_name) %>
  <%= link_to image_tag("icons/vk.png"), user_omniauth_authorize_path(:vkontakte) %>
  <%= link_to image_tag("icons/facebook.png"), user_omniauth_authorize_path(:facebook) %>
</div>

</div>
</div>
</div>