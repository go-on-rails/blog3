<!DOCTYPE html>
<html>
<head>
  <title>Blog3</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default" role="navigation">
  <div class="container">
    <div class="navbar-header">
    <% if user_signed_in? %> 
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    <% end %>

      <a class="navbar-brand" href="<%= root_path %>">
        Blog3
        <span class="badge pull-right online-counter" > <%= count_of_online %> </span>
      </a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <% if user_signed_in? %> 
      <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul class="nav navbar-nav">
          <%= bs_nav_link_to 'Feed', feed_path %>
          <%= bs_nav_link_to 'Profile', profile_path %>
        
        <% if current_user.admin? %>
          <%= bs_nav_link_to 'Posts', posts_path %>
          <%= bs_nav_link_to 'Users', users_path %>
         <% end %>
      
        </ul>
        <p class="navbar-text navbar-right ">
            Hello, <%= link_to current_user.username, profile_path %>!
        </p>
        

      </div><!-- /.navbar-collapse -->
    <% end %>

  </div><!-- /.container-fluid -->
</nav>
<div class="container">
  <div class="row">
    <div class="span12">
      <% if !notice.nil? %><div class="notice alert alert-info">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= notice %></div><% end %>
      <% if !alert.nil? %><div class="alert alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= alert %></div><% end %>
      <%= yield %>
    </div>
  </div>
  
</div>

</body>
</html>
